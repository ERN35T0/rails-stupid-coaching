<h1>Info page</h1>
<div class="name= forms d-flex bd-highlight">
  <form action="<%= ask_path %>" method="get">
    <input type="text"
      name="team"
      <%# Text inside bar %>
      placeholder="What's your favorite team?"
      <%# Define params %>
      value="<%= params["team"] %>">
      <%# value botton %>
    <input type="submit" value="Choose!">
      <ul>
      <%# take instance variable from questions_controller, iterate each teams %>
      <% @teams.each do |team| %>
        <li><%= team.capitalize %></li>
      <% end %>
    </ul>
  </form>

  <div class="coach-form">
    <form action="/answer">
      <label for="question">Ask to your coach</label>
      <input type="text" id="question" name="question" placeholder="today is a day off?">
      <input type="submit" value="Ask!">
  </form>
  </div>
</div>
