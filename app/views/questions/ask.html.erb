<h1>Info page</h1>

<form action="<%= ask_path %>" method="get">
  <input type="text"
    name="team"
    <%# Text inside bar %>
    placeholder="What's your favorite team?"
    <%# Define params %>
    value="<%= params["team"] %>">
    <%# value botton %>
  <input type="submit" value="Choose!">
</form>

<ul>
  <%# take instance variable from questions_controller, iterate each teams %>
  <% @teams.each do |team| %>
    <li><%= team.capitalize %></li>
  <% end %>
</ul>
